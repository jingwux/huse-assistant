/* pages/user/user.wxss */
.container{
  width: 100%;
  height: 100%;
  position: relative;
  top: 0px;
}
.container .bg image{
  width: 100%;
  height: 25%;
}
.container .head image{
  width: 96px;
  height: 96px;
  border-radius: 50%;
  position: absolute;
  top:5%;
  left: 5%;
}
.container .head .sno{
  color: snow;
  font-weight: bold;
  position: absolute;
  top:11%;
  left: 47%;
}
.container .inform{
  width: 56%;
  height: 20px;
  font-size: 14px;
  color: snow;
  text-align: center;
  position: absolute;
  top: 16%;
  right: 10%;
}


/* 信息列表  */
.container .user{
  height: 30%;
  position: relative;
}
.container .user .user-item{
  width: 99.1%;
  height: 25%;
  border: 1px solid #EEEEE0;
  margin-top: -1px;
  line-height: 25%;
}
.container .user .user-item image{
  width: 30px;
  height: 30px;
  float: left;
  margin-top: 2%;
  margin-right: 2%;
}
.container .user .user-item .title-item{
  margin-top: 4.5%;
  align-items: baseline;
}
.container .user .user-item .info-item{
  display: inline-block;
  position: absolute;
  right: 10px;
}

/*   */
.bottom{
  margin-top: 18%;
}
.bottom .note{
   width: 100%;
   margin-top: -1px;
   padding: 5px 0;
   padding-left: 10px;
   border: 1px solid #EEEEE0;
}


/* 登出按钮 */
.logBtn{
  width: 100%;
  bottom: 10px;
  color: snow;
  position: absolute;
  background: linear-gradient(orangered,orange,orangered);
}
