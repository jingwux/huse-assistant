/* pages/login/login.wxss */

image.bg{
  width: 100%;
  height: 105%;
}

.login{
  width: 100%;
  height: 100%;
  text-align: center;
  position: absolute;
  top:0%;
}
.login image{
  display: block;
}
.login image.cloud{
  width: 180rpx;
  margin: 50rpx auto;
}
.login image.title{
  width: 600rpx;
  margin: 50rpx auto 100rpx;
}
.login image.icon{
  width: 100rpx;
  display: inline-block;
}

.username, .password{
  height: 46px;
  border: 1px solid #ff8000;
  margin: 5%;
  border-radius: 5px;
}

.username input,.password input{
  width: 70%;
  height: 36px;
  padding: 5px;
  font-size: 20px;
  text-align: left;
  color: snow;
}
.plh{
  color: snow;
}

/* 记住密码  */
.login checkbox{
  float: left;
  margin: 0 100px;
  color: snow;
  zoom: 50%;
  font-size: 24px;
}
/* 忘记密码  */
.login  navigator{
  display: inline-block;
  color: snow;
  text-decoration:underline;
  padding: 0px 10px;
}

.login button{
  width: 85%;
  margin-top: 20%;
  color:#7acfa6;
  border-radius: 15rpx;
  background: linear-gradient(whitesmoke,snow);
}

.login icon{
  position: absolute;
  top: 34.3%; 
  right: 25px;
  z-index: 1;
}
.login .icon1{
  position: absolute;
  top: 45.8%; 
  right: 25px;
  z-index: 1;
}



.login image.log
,.login image.log1{
  float: left;
  width: 38px;
  margin: 6px 30px 0px 5px;
}



/* 帮助 */
.login .login-help {
  display: flex;
  align-items: center;
  justify-content: flex-end;

  margin: 0 50px;
  font-size: 12px;
  color: snow;
}
.login-help-img {
  width: 11pt;
  height: 11pt;
  margin: 0 5rpx;
}



.help {
  z-index: 100;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.box {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  width: 80%;
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 0 50px rgba(22,22,22,.35);
  transform: translate3d(0,-400rpx,0);
}
.box-hd {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  border-bottom: 1px solid #eee;
}
.box-title {
  font-size: 13pt;
}
.box-close {
  position: absolute;
  right: 20rpx;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx;
}
.box-bd {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 15rpx 40rpx 30rpx;
}
.help-q {
  color: #999;
  font-size: 11pt;
  line-height:200%;
  margin-top: 5rpx;
}
.help-a {
  text-indent: 1em;
  font-size: 10pt;
  line-height: 160%;
  display: flex;
  flex-direction: column;
}
.help-a text{
  word-break: break-all;
}
